<%- include("partials/header.ejs") %>

    <!--Section: Contact v.2-->
    <section class="mb-4">
        <div class="container">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-9">
                    <!--Section heading-->
                    <h2 class="title-adapt-color h1-responsive font-weight-bold text-center my-4">Contact us</h2>
                    <!--Section description-->
                    <p class="text-adapt-color text-center w-responsive mx-auto mb-5">Do you have any questions? Please
                        do not hesitate
                        to
                        contact us
                        directly. Our team will come back to you within
                        a matter of hours to help you.</p>

                    <div class="row">

                        <!--Grid column-->
                        <div class="col-md-9 mb-md-0 mb-5">
                            <form id="contact-form" name="contact-form" action="/send" method="POST">

                                <!--Grid row-->
                                <div class="row">

                                    <!--Grid column-->
                                    <div class="col-md-6">
                                        <div class="md-form mb-3">
                                            <input type="text" id="name" name="name" class="form-control" required>
                                            <label for="name" class="text-adapt-color">Name</label>
                                        </div>
                                    </div>
                                    <!--Grid column-->

                                    <!--Grid column-->
                                    <div class="col-md-6">
                                        <div class="md-form mb-3">
                                            <input type="email" id="email" name="email" class="form-control" required>
                                            <label for="email" class="text-adapt-color">Email</label>
                                        </div>
                                    </div>
                                    <!--Grid column-->

                                </div>
                                <!--Grid row-->

                                <!--Grid row-->
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form mb-3">
                                            <input type="text" id="subject" name="subject" class="form-control"
                                                required>
                                            <label for="subject" class="text-adapt-color">Subject</label>
                                        </div>
                                    </div>
                                </div>
                                <!--Grid row-->

                                <!--Grid row-->
                                <div class="row">

                                    <!--Grid column-->
                                    <div class="col-md-12">

                                        <div class="md-form mb-3">
                                            <textarea type="text" id="message" name="message" rows="2"
                                                class="form-control md-textarea" required></textarea>
                                            <label for="message" class="text-adapt-color">Message</label>
                                        </div>

                                    </div>
                                </div>
                                <!--Grid row-->

                                <div class="text-center text-md-left">
                                    <button class="btn btn-success">Send</button>
                                </div>
                            </form>
                        </div>
                        <!--Grid column-->

                        <!--Grid column-->
                        <div class="col-md-3 text-center">
                            <ul class="list-unstyled mb-3">
                                <li class="text-adapt-color"><i class="fas fa-map-marker-alt fa-2x"></i>
                                    <p>College Station, TX</p>
                                </li>

                                <li class="text-adapt-color"><i class="fas fa-phone mt-4 fa-2x"></i>
                                    <p>+1 234 567 8910</p>
                                </li>

                                <li class="text-adapt-color"><i class="fas fa-envelope mt-4 fa-2x"></i>
                                    <p>companypolilime@gmail.com</p>
                                </li>
                            </ul>
                        </div>
                        <!--Grid column-->

                    </div>
                </div>
                <div class="col-1"></div>
            </div>
        </div>
    </section>
    <!--Section: Contact v.2-->

    <%- include("partials/footer.ejs") %>