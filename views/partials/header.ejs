<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous" />

    <!-- Front end HTTP requests library -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <!-- Icons -->
    <script src="https://kit.fontawesome.com/206051e64a.js" crossorigin="anonymous"></script>

    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <!-- Scripts needed by US Map -->
    <script src="/scripts/usmap/jquery.color.js"></script>
    <script src="/scripts/usmap/raphael.js"></script>
    <script src="/scripts/usmap/jquery.usmap.js"></script>

    <!-- Animation CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <!-- Custom CSS -->
    <link id="colorScheme" rel="stylesheet" type="text/css" href="/stylesheets/light.css" />

    <title>PoliLime</title>
</head>

<body>
    <nav class="navbar navbar-dark fixed-top bg-dark bg">
        <div style="height: 80px" class="container-fluid">
            <a class="navbar-brand" href="/">
                PoliLime <img src="/img/logo.png" />
            </a>

            <form class="d-flex" autocomplete="off" action="/search" method="GET">
                <div class="autocomplete">
                    <input name="politicianName" class="form-control me-2 search-bar-edge" type="text"
                        placeholder="Politician Name" aria-label="Search" id="myInput" />
                </div>
                <button class="btn btn-outline-success round-button" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
    </nav>

    <button class="btn btn-outline-success round-button" onclick="topFunction()" id="goUpBtn">
        <i class="fas fa-arrow-up"></i>
    </button>

    <div class="container">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <div>
                    <%- include('../partials/flash') %>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>

    <!-- Side navigation -->
    <div class="col-2 col-md-1 col-sm-1 sidenav">
        <ul style="text-align:left;">
            <li class="sidenav-item">
                <a href="/"><i class="fas fa-home"></i> Home</a>
            </li>
            <li class="sidenav-item">
                <a href="/about"><i class="fas fa-lemon"></i> About PoliLime</a>
            </li>
            <li class="sidenav-item">
                <a href="/contact"><i class="fas fa-address-card"></i> Contact Us</a>
            </li>
            <li class="sidenav-item">
                <a href="/faq"><i class="fas fa-question"></i> FAQs</a>
            </li>
            <li class="sidenav-item">
                <a href="/settings"><i class="fas fa-cog"></i> Settings</a>
            </li>
            <% if (!currentUser) { %>
                <li class="sidenav-item">
                    <a href="/login"><i class="fas fa-sign-in-alt"></i> Login</a>
                </li>
                <li class="sidenav-item">
                    <a href="/register"><i class="fas fa-user-plus"></i> Register</a>
                </li>
            <% } else { %>
                <li class="sidenav-item">
                    <a href="/favorites"><i class="fas fa-bookmark"></i> Favorites</a>
                </li>
                <li class="sidenav-item">
                    <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </li>
            <% } %>
        </ul>
    </div>