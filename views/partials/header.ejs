<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/img/logo.png">

    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous" />

    <!-- Front end HTTP requests library -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    
    
    <!-- Icons -->
    <script src="https://kit.fontawesome.com/206051e64a.js" crossorigin="anonymous"></script>

    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <!-- Scripts needed by US Map -->
    <script src="/scripts/usmap/jquery.color.js"></script>
    <script src="/scripts/usmap/raphael.js"></script>
    <script src="/scripts/usmap/jquery.usmap.js"></script>

    <!-- Animation CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <!-- Custom CSS -->
    <link id="colorScheme" rel="stylesheet" type="text/css" href="/stylesheets/light.css" />

    <!-- Customs JS to set color theme on page load -->
    <script src="/scripts/colorScheme.js"></script>

     <!-- for the translate button -->
     <script src="/scripts/translateTab.js"></script>

     <!-- for friend invite link -->
     <script src="/scripts/copy.js"></script>
    
    <title>PoliLime</title>
</head>

<body>
    <nav class="navbar navbar-dark fixed-top bg-dark bg">
        <div style="height: 80px" class="container-fluid">
            <a class="navbar-brand" href="/" data-toggle="tooltip" data-placement="bottom" title="PoliLime">
                PoliLime <img src="/img/logo.png" />
            </a>          
           
                
            <form class="d-flex" autocomplete="off" action="/search" method="GET">
                
                <div class="autocomplete">
                    <input name="politicianName" class="form-control me-2 search-bar-edge" type="text"
                        placeholder="Politician Name" aria-label="Search" id="myInput" data-toggle="tooltip" data-placement="bottom" title="Search for a Politician"/>
                </div>
                <button class="btn btn-outline-success round-button" type="submit" data-toggle="tooltip" data-placement="bottom" title="Search">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
    </nav>

    <button class="btn btn-outline-success round-button" onclick="topFunction()" id="goUpBtn" data-toggle="tooltip" data-placement="bottom" title="Back to Top">
        <i class="fas fa-arrow-up"></i>
    </button>

    <div class="container">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <div>
                    <%- include('../partials/flash') %>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>

    <!-- Side navigation -->
    <div class="col-2 col-md-1 col-sm-1 sidenav">
        <ul style="text-align:left;">
            <li class="sidenav-item">
                <a href="/" data-toggle="tooltip" data-placement="bottom" title="Home"><i class="fas fa-home"></i> Home</a>
            </li>
            <li class="sidenav-item">
                <a href="/politicians" data-toggle="tooltip" data-placement="bottom" title="List of Politicians"><i class="fas fa-flag-usa"></i> Politicians</a>
            </li>
            <li class="sidenav-item">
                <a href="/voting" data-toggle="tooltip" data-placement="bottom" title="Voting"><i class="fas fa-vote-yea"></i> Voting</a>
            </li>
            <li class="sidenav-item">
                <a href="/about" data-toggle="tooltip" data-placement="bottom" title="About Us"><i class="fas fa-lemon"></i> About Us</a>
            </li>
            <li class="sidenav-item">
                <a href="/contact" data-toggle="tooltip" data-placement="bottom" title="Contact Us"><i class="fas fa-address-card"></i> Contact Us</a>
            </li>
            <li class="sidenav-item">
                <a href="/faq" data-toggle="tooltip" data-placement="bottom" title="Frequently Asked Questions"><i class="fas fa-question"></i> FAQs</a>
            </li>
            <li class="sidenav-item">
                <a href="/settings" data-toggle="tooltip" data-placement="bottom" title="Settings"><i class="fas fa-cog"></i> Settings</a>
            </li>
            
           
            <% if (!currentUser) { %>
                <li class="sidenav-item">
                    <a href="/login" data-toggle="tooltip" data-placement="bottom" title="Login"><i class="fas fa-sign-in-alt"></i> Login</a>
                </li>
                <li class="sidenav-item">
                    <a href="/register" data-toggle="tooltip" data-placement="bottom" title="Register"><i class="fas fa-user-plus"></i> Register</a>
                </li>
            <% } else { %>
                <li class="sidenav-item">
                    <a href="/favorites" data-toggle="tooltip" data-placement="bottom" title="Favorites"><i class="fas fa-bookmark"></i> Favorites</a>
                </li>
                <li class="sidenav-item">
                    <a href="/logout" data-toggle="tooltip" data-placement="bottom" title="Logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </li>
            <% } %>

            <li class="sidenav-item" >               
                <a href=# onClick="copyToClipboard()" data-toggle="tooltip" data-placement="bottom" title="Invite a Friend">
                    <i class="fa fa-share-alt" aria-hidden="true"></i> Invite a Friend</button>
                </a>
                  
            </li>
        </ul>
    </div>